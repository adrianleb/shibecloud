@import 'nib'
@import 'nib/reset'

html
  font-family: "comic sans ms", Chalkboard
  font-size: 62.5%
  height: 100%
body
  font-size: 1.6rem
  height: 100%
  
body, html 
  margin 0
  padding 0
*, *:before, *:after
  position: relative
  box-sizing: border-box
  
  outline: none
  -webkit-font-smoothing: antialiased
  text-rendering: optimizeLegibility
#main, #app
  position: absolute
  min-height: 100%
  top: 0
  width: 100%
  display: block
  overflow: hidden
#app
  position relative
#bg
  position: fixed
  top: -10%
  background-color: darken(white, 10%)
  left: -10%
  right: 0
  bottom: 0
  width: 120%
  height: 130%
  z-index: -1
  display: block
  background-size: cover
  -webkit-filter: blur(7px)
  background-position: center
header
  background-color: rgba(black, 0.33333)
  border-bottom: 1px solid rgba(white, 0.16667)
  border-right: 1px solid rgba(white, 0.16667)
  border-top: 1px solid rgba(white, 0.16667)
  // border-left: 1px solid rgba(white, 0.16667)
  
  
  -webkit-transition: all 0.15s ease-out
  display: block
  z-index: 3
  width: 31.6rem
  height: 6rem
  margin 2rem
  h1
    float: left
    font-size: 2rem
    font-weight: bold
    margin-top: 0
    width: 13.5rem
    margin-left: 6rem
    height 6rem
    text-align: center
    line-height 3
    letter-spacing: 0.8px
    border-left: 1px solid rgba(white, 0.16667)
    
    color: white
    -webkit-transition: all 0.15s ease-out

  .play_toggle
    float: right
    height: 6rem
    display: inline-block
    width: 6rem
    text-align: center
    border-left: 1px solid rgba(white, 0.16667)
    opacity: 1
    text-decoration: none
    -webkit-transition: all 0.1s ease-out
    color: white
    &:hover
      background-color: rgba(white, 0.16666)
    &:before
      content: ""
      font-family Arial
      line-height 6
      

    &.play
      &:before
        content: "▌▌"
        font-size 1rem
    &.pause
      &:before
        content: "▶"
        font-family Arial
        font-size 1.6rem
        line-height 4

  .menu_toggle
    float: left
    height: 6rem
    display: inline-block
    width: 6rem
    text-align: center
    border-left: 1px solid rgba(white, 0.16667)
    
    opacity: 1
    text-decoration: none
    -webkit-transition: all 0.1s ease-out
    color: white
    &:before
      content: ""
      position: absolute
      // font-size: 1rem
      -webkit-transition: all 0.15s ease-out
      line-height: 6rem
      background-image: url("/assets/img/backarrow.svg")
      color: white
      text-align: center
      height: 65%
      width: 65%
      margin-top: 2rem
      margin-left: 2.1rem
      display: block
      background-size: 27%
      opacity: 0
      background-repeat: no-repeat
    &:after
      content: ""
      position: absolute
      -webkit-transition: all 0.15s ease-out
      font-size: 2rem
      line-height: 6rem
      background-image: url("/assets/img/menu_icon.svg")
      -webkit-font-smoothing: none
      color: white
      text-align: center
      height: 62%
      width: 62%
      margin-top: 2.3rem
      margin-left: 2rem
      display: block
      background-size: 55%
      background-repeat: no-repeat
    &:hover
      background-color: rgba(white, 0.16666)
    &:before
      opacity: 1
    &:after
      opacity: 0
    .menu_visible_off &
      &:before
        opacity: 0
      &:after
        opacity: 1
.logo
  position: fixed
  top: 2rem
  left: 2rem
  display: block
  height: 6rem
  width: 6rem
  border-left: 1px solid rgba(white, 0.16667)
  
  z-index: 6
  // background-color:red;
  -webkit-filter: saturate(0)
  -webkit-transition: all 0.16s ease-out
  color: white
  &:hover
    -webkit-filter: saturate(1)
  &:before
    content: ""
    // content: url("/assets/img/shibecloud.svg");
    display: block
    font-size: 1rem
    width: 100%
    height: 100%
    background-image: url("/assets/img/doge.png")
    color: white
    text-align: center
    background-repeat: no-repeat
    top: 0
    left: 0
    position: absolute
    background-position: center
    background-size: 80%
    opacity 0.7
    line-height: 5rem
.menu
  border: 1px solid rgba(white, 0.08)
  position: absolute
  background-color: rgba(black, 0.33333)
  left: 0
  top: 8rem
  width: 60rem
  padding: 2rem
  padding-right 2rem
  margin 2rem
  margin-left 2rem
  margin-right 0
  height auto
  -webkit-transition: all 0.15s ease-out
  // height: 100%
  p, h2
    color: white
    margin-bottom: 1rem
    line-height: 1.3
    font-size 1.6rem
    
  h2
    font-size 2rem
    font-weight 500
    
  p
    opacity 0.5
  a
    color white
    
    
    
.input_url
  // position: absolute
  left: 0
  // top: 50%
  // margin-top: -14rem
  // background-color: rgba(black, 0.33333)
  width: 100%
  height: auto
  margin-top 4rem
  // border: 1px solid rgba(white, 0.16667)
  border-left: none
  z-index: 9999
  // padding: 1rem
  -webkit-transition: all 0.15s ease-out
  opacity: 0
  -webkit-transform: translateX(-100%)
  pointer-events: none
  h3
    color: white
    margin: 0
    padding: 0
    font-weight: 500
    opacity: 1
    font-size 1.4rem
    line-height: 1.1
    padding-bottom 0.4rem
    max-width 80
  &.visible
    -webkit-transform: translateX(0)
    opacity: 1
    pointer-events: auto
  form
    height: 6rem
    display: block
    margin-top: 0.6rem
  input[type="text"]
    width: calc(75%)
    background-color: transparent
    // margin: 1rem;
    color: white
    border: none
    border: 1px solid rgba(white, 0.7)
    height: 4rem
    padding 0.4rem
    font-size: 1.8rem
    // padding-left: 1rem;
    z-index: 999
    // line-height: 6rem
    vertical-align: top
    display: inline-block
    font-family: "comic sans ms"
    margin-right 0
  input[type="submit"]
    display: inline-block
    width: calc(25% )
    font-family: "comic sans ms"
    
    border: none
    // background-color: rgba(white, 0.4);
    text-align: center
    font-size: 16px !important
    vertical-align: top
    font-weight: bold
    background-color: rgba(white, 0.25)
    box-shadow: inset 0 0 0 1px rgba(white, 0.7)
    height: 4rem
    color: white
    margin-left -1px;
    text-decoration: none
    // float: right
    vertical-align: top
    border-radius: 0
    -webkit-appearance: none
.controls
  a
    display: block
    width: 100%
    font-family: "comic sans ms"
    // letter-spacing: 1px;
    text-rendering: optimizeLegibility
    margin-bottom: 2rem
    border: none
    // background-color: rgba(white, 0.4);
    text-align: center
    line-height: 5.3rem
    font-size: 16px !important
    vertical-align: top
    font-weight: 600
    box-shadow: inset 0 0 0 2px rgba(white, 1)
    height: 3.6rem
    padding-bottom: 25%
    -webkit-transition: all 0.1s ease-out
    color: white
    text-decoration: none
    &:hover
      background-color: rgba(white, 0.16666)
    border-radius: 0
    -webkit-appearance: none
#track
  background-size: cover
  width: 56rem
  position: absolute
  left: 50%
  top: 50%
  -webkit-transition: all 0.15s ease-out
  transform: translate(-40%, -50%);
  height: 56rem
  display: block
  border: 20px solid white
  z-index  -1
  position: absolute
  .cold-player &
    opacity 0.1
  .menu_visible_off &
    transform: translate(-50%, -50%);
    
    left: 50%
  #track-comments
    position: absolute
    top: 0
    left: 0
    right: 0
    bottom: 0
    z-index: 2
    display: block
  h4
    max-width: 90%
    display: block
    z-index: 1
    position: absolute
    font-size 1.6rem
    text-shadow: 0 1px 1px black
    font-family: "comic sans ms"
    opacity: 0
    font-weight: bold
    -webkit-transition: all 0.5s ease-out 24s
    &.visible
      opacity: 1
.doge
  position: absolute
  width: 20rem
  z-index: 0
  height: 0
  background-image: url("/assets/img/doge_raw.png")
  display: block
  background-size: cover
  margin: -5rem 0 0 -5rem
.menu_visible_off
  .logo
    -webkit-transform: translateX(-2rem)
    border-left-color: transparent
    
  header
    -webkit-transform: translateX(-15.6rem)
 
    h1
      opacity: 0
  .menu
    -webkit-transform: translateX(-110%)
    
.menu_visible_off:not(.cold-player)
  .input_url
    -webkit-transform: translateX(-100%)
    opacity: 0
    pointer-events: none
    
.cold-player
  background-color black
  .menu
    border none
    
  .input_url
    border none
    // padding 10rem
    background-color transparent
    
@media (max-width: 620px)
  header
    margin-left 5%
  .menu
    width 90%
    max-width 90%
    margin-left 5%
    margin-right 5%
    
  #track
    width 36rem    
    height 36rem   
    border-width 1.2rem
  #track-comments h4
    font-size 1.4rem 
    
@media (max-width: 420px)
 .input_url form
    height auto 
  .input_url input[type="text"], .input_url input[type="submit"]
    width 100%
    display block
    margin-left 0
  .menu
    text-align center
  #track
    width 28rem    
    height 28rem   
    border-width 0.8rem
  #track-comments h4
    font-size 1.2rem 

@media (max-width: 320px)
  header
    margin-right 0
    